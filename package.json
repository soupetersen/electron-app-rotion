{
    "name": "rotion",
    "productName": "Rotion",
    "version": "0.0.0",
    "description": "A Notion inspired written with electron",
    "main": "./out/main/index.js",
    "author": "soupetersen",
    "homepage": "https://github.com/soupetersen",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.json --composite false",
        "typecheck:web": "tsc --noEmit -p tsconfig.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev --watch",
        "build": "npm run typecheck && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:win": "npm run build && electron-builder --win --config",
        "build:mac": "electron-vite build && electron-builder --mac --config",
        "build:linux": "electron-vite build && electron-builder --linux --config",
        "release": "electron-builder --publish always"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^1.0.2",
        "@electron-toolkit/utils": "^1.0.2",
        "@radix-ui/react-collapsible": "^1.0.1",
        "@tailwindcss/typography": "^0.5.8",
        "@tanstack/react-query": "^4.19.1",
        "@tiptap/extension-document": "2.0.0-beta.204",
        "@tiptap/extension-highlight": "2.0.0-beta.204",
        "@tiptap/extension-placeholder": "2.0.0-beta.204",
        "@tiptap/extension-typography": "2.0.0-beta.204",
        "@tiptap/react": "2.0.0-beta.204",
        "@tiptap/starter-kit": "2.0.0-beta.204",
        "clsx": "^1.2.1",
        "cmdk": "^0.1.20",
        "electron-router-dom": "^1.0.5",
        "electron-store": "^8.1.0",
        "phosphor-react": "^1.4.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.4.4"
    },
    "devDependencies": {
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@electron/notarize": "^1.2.3",
        "@types/node": "16.11.22",
        "@types/react": "18.0.25",
        "@types/react-dom": "18.0.9",
        "@typescript-eslint/eslint-plugin": "^5.36.2",
        "@typescript-eslint/parser": "^5.36.2",
        "@vitejs/plugin-react": "^2.2.0",
        "autoprefixer": "^10.4.13",
        "electron": "^21.3.0",
        "electron-builder": "^23.6.0",
        "electron-vite": "^1.0.14",
        "eslint": "^7.21.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.5.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-import-helpers": "^1.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "install": "^0.13.0",
        "postcss": "^8.4.19",
        "prettier": "^2.7.1",
        "tailwind-scrollbar": "^2.0.1",
        "tailwindcss": "^3.2.4",
        "typescript": "^4.9.3",
        "vite": "^3.2.4",
        "vite-tsconfig-paths": "^4.0.1"
    }
}
